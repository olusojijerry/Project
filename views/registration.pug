extends layout

block content
    form(action="/resource" method="post")
        br
        br
        h2(style="text-align: center") Registration For Students
        br
        br
        .session
            label(for="names") Name In Full
            input(type="text", name="name")
            br
            br   
            label(for="email") Email
            input(type="email", name="email")
            br
            br
            label(for="class") Select Your Class
            select(name="gclass")
                option(value="") --Select--
                option(value="") Senior
                option(value="") Junior
                option(value="") Basic
            br
            br
            button(type="submit" ) Submit
            br
            <p>If you already have an account with us <a href="login">Click Here</a> to Login</p>
        aside
            label(for="class") Select Your Gender
            select(name="gender")
                option(value="") --Select--
                option(value="") Male
                option(value="") Female
            br
            br
            label(for="ldob") Date Of Birth
            input(type="date", name="dob")
            br
            br
            label(for="lpassword") Password
            input(type="password", name="password1" required)
            br
            br
            label(for="confirm password") Confirm Password
            input(type="password", name="password2" required)
            br
            span(id="message")
            
        
            